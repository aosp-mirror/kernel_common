&soc {
	qcom,ion {
		qcom,ion-heap@23 { /* OTHER PIL HEAP */
			compatible = "qcom,msm-ion-reserve";
			reg = <23>;
			qcom,heap-align = <0x1000>;
			qcom,memory-fixed = <0x0dc00000 0x1e00000>;
			qcom,ion-heap-type = "CARVEOUT";
		};
	};
};
